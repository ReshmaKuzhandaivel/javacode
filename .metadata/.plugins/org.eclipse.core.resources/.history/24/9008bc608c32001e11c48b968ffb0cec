package day4;

public class Loop {
	public static void main(String[]args) {
		int day=1;
		int no_of_classes=10;
		while(day<=no_of_classes) {
			System.out.println("I am attending class day"+day);
					day++;
		}
		int dice=1;
		int max_dice=6;
		do {
			System.out.println("This is rolling no"+dice);
			dice++;
		
		}
		
	}

}
